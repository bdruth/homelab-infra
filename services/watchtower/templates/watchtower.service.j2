[Unit]
Description=Watchtower Container Update Service
Requires=podman.service
After=podman.service

[Service]
WorkingDirectory={{ watchtower_install_dir }}
Type=oneshot
RemainAfterExit=yes

ExecStart=/usr/bin/docker compose up -d
ExecStop=/usr/bin/docker compose down

Restart=on-failure
RestartSec=10
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target