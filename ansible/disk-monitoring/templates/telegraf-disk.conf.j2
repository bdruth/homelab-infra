# Telegraf disk monitoring configuration
# Generated by Ansible - DO NOT EDIT MANUALLY

[global_tags]
  host = "{{ inventory_hostname }}"

[agent]
  interval = "{{ telegraf_interval | default('60s') }}"
  round_interval = true
  metric_batch_size = 1000
  metric_buffer_limit = 10000
  collection_jitter = "0s"
  flush_interval = "{{ telegraf_flush_interval | default('60s') }}"
  flush_jitter = "0s"
  precision = ""
  hostname = "{{ inventory_hostname }}"
  omit_hostname = false

# InfluxDB output
[[outputs.influxdb]]
  urls = ["{{ influxdb_url | default('http://localhost:8086') }}"]
  database = "{{ influxdb_database | default('telegraf') }}"
  skip_database_creation = false
  timeout = "5s"
{% if influxdb_username | default('') != '' and influxdb_password | default('') != '' %}
  username = "{{ influxdb_username }}"
  password = "{{ influxdb_password }}"
{% endif %}

# Disk usage monitoring
[[inputs.disk]]
{% if ignored_filesystems | default([]) | length > 0 %}
  ignore_fs = [{% for fs in ignored_filesystems %}"{{ fs }}"{% if not loop.last %}, {% endif %}{% endfor %}]
{% endif %}
{% if ignored_mount_points | default([]) | length > 0 %}
  ignore_mount_points = [{% for mp in ignored_mount_points %}"{{ mp }}"{% if not loop.last %}, {% endif %}{% endfor %}]
{% endif %}

# Disk I/O monitoring
[[inputs.diskio]]
  skip_serial_number = true
